<% if (title) {%>
    <h1><%= title %></h1>
    <% }else{
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post" class="form">
    <label for="firstname">First Name:</label>
    <input type="text" name="account_firstname" id="account_firstname" placeholder="First Name" required>

    <label for="lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" placeholder="Last Name" required>

    <label for="email">Email:</label>
    <input type="email" name="account_email" id="account_email" placeholder="Email" required>

    <label for="password">Password:</label>
    <input type="password" name="account_password" id="account_password" placeholder="Password" required pattern=pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Password must be at least 8 characters and contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character">
    <span id="showPswd" style="cursor:pointer;">Show password</span>
    
    <button type="submit">Register</button>
</form>





<script>
document.getElementById('showPswd').addEventListener('click', function() {
    const pswdInput = document.getElementById('account_password');
    if (pswdInput.type === 'password') {
        pswdInput.type = 'text';
        this.textContent = 'Hide password';
    } else {
        pswdInput.type = 'password';
        this.textContent = 'Show password';
    }
});
</script>

