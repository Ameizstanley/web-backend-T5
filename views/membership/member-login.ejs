<% if (title) {%>
    <h1><%= title %></h1>
    <% } %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2 class="member-heading"> You are now a member of this exclusive Motor Club </h2>

<form action="/membership/member-login" method="post" class="member-form">
     <label for="member_firstname">First Name:</label>
    <input type="text" id="member_firstname" name="member_firstname" maxlength="100" title="your first name" required>

    <label for="member_lastname">Last Name:</label>
    <input type="text" id="member_lastname" name="member_lastname" maxlength="100" title="your last name" required>

    <label for="card_last_four">Last 4 Digits of Card:</label>
    <input type="number" id="card_last_four" name="card_last_four" maxlength="4" required>

    <div class="form-actions">
    <button type="submit" class="submit-btn">
      Login 
    </button>
</form>