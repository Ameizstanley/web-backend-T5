<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<form action="/inv/add-classification" method="post" class="form">
    <label for="classification_name">Classification Name</label>
    <input type="text" name="classification_name" id="classification_name" required pattern="^[A-Za-z0-9]+$">
    <button type="submit">Add Classification</button>
</form>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>