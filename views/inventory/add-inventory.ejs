<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


<form action="/inv/add-inventory" method="post" class="form">
    <label for="inv_make">Make</label>
    <input type="text" name="inv_make" id="inv_make" required pattern="^[A-Za-z0-9\s]+$">

    <label for="inv_model">Model</label>
    <input type="text" name="inv_model" id="inv_model" required pattern="^[A-Za-z0-9\s]+$">

    <label for="inv_year">Year</label>
    <input type="number" name="inv_year" id="inv_year" required min="1886" max="2025">

    <label for="inv_description">Description</label>
    <textarea name="inv_description" id="inv_description" required></textarea>

    <label for="inv_image">Image Path</label>
    <input type="text" name="inv_image" id="inv_image" required placeholder="/images/vehicles/no-image.png">

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="url" name="inv_thumbnail" id="inv_thumbnail" required placeholder="/images/vehicles/no-image.png">

    <label for="inv_price">Price</label>
    <input type="number" name="inv_price" id="inv_price" required step="0.01" min="0">

    <label for="inv_miles">Miles</label>
    <input type="number" name="inv_miles" id="inv_miles" required min="0">

    <label for="inv_color">Color</label>
    <input type="text" name="inv_color" id="inv_color" required pattern="^[A-Za-z\s]+$">

    <label for="classification_id">Classification: </label>
    <%- classificationSelect %>
    
    <button type="submit">Add Vehicle</button>

</form>