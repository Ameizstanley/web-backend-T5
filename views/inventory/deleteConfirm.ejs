<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


<form action="/inv/delete" method="post" class="form" id="DeleteForm">
    <label for="inv_make">Make</label>
    <input type="text" name="inv_make" id="inv_make" required pattern="^[A-Za-z0-9\s]+$" readonly>

    <label for="inv_model">Model</label>
    <input type="text" name="inv_model" id="inv_model" required pattern="^[A-Za-z0-9\s]+$" readonly>

    <label for="inv_year">Year</label>
    <input type="number" name="inv_year" id="inv_year" required min="1886" max="2025" readonly>

    <label for="inv_price">Price</label>
    <input type="number" name="inv_price" id="inv_price" required step="0.01" min="0" readonly>
    

    <p>Confirm Deletion - The delete is permanent.</p>

    <button type="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>


</form>